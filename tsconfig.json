{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out",
    "target": "es6",
    "noLib": false,
    "sourceMap": true,
    "rootDir": ".",
    "allowJs": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "typings/**",
    "out"
  ]
}